{
  "name": "runt-timer",
  "version": "2.0.0",
  "description": "RunT - Timer System by Dvnny.no",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "server": "node server/index.js",
    "start:all": "concurrently \"npm run server\" \"npm run dev\" \"timeout /t 5 && npm start\"",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^8.2.2",
    "css-loader": "^6.11.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.6",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "build": {
    "appId": "com.dvnny.runt",
    "productName": "RunT",
    "icon": "src/logo.ico",
    "asarUnpack": [
      "server/**"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": ["portable", "nsis"],
      "icon": "src/logo.ico"
    }
  }
}
